<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Alerts Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alerts"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <!-- Errors -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_errors"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/errors"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod Active Alerts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_pod_active_alerts"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pod_active_alerts"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod Expires -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_pod_expiry_date"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pod_expiry_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delivery Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <!-- Reservoir -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_reservoir"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/reservoir"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Total Delivered -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_total_delivered"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/total_delivered"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Base Basal Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_base_basal_rate"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/base_basal_rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Temp Basal Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_temp_basal_rate"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/temp_basal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Connection Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connection"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <!-- Pod Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_pod_status"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/pod_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text=""
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Last Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_last_connection"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/last_connection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Last Bolus -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_last_bolus"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/last_bolus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Firmware Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firmware"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <!-- Unique ID -->
                    <LinearLayout
                        android:id="@+id/omnipod_common_overview_pod_unique_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_pod_unique_id"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/unique_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod Lot -->
                    <LinearLayout
                        android:id="@+id/omnipod_common_overview_lot_number_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_lot_number"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pod_lot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod Tid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_pod_sequence_number"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pod_sequence_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod fw version -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_firmware_version"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/firmware_version"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textIsSelectable="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Pod Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/omnipod_common_overview_time_on_pod"
                            android:textAlignment="viewEnd"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=":"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/time_on_pod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textAlignment="viewStart"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Queue TextView -->
                    <TextView
                        android:id="@+id/queue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:padding="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer Image -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:rotationX="180"
                android:rotationY="180"
                app:drawableTopCompat="@drawable/ic_pod" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</merge>
